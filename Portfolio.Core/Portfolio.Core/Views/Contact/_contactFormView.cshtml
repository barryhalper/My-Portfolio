@model Portfolio.Core.Models.ContactViewModel






    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" placeholder="Your name" />

    </div>

    <div class="form-group">
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" placeholder="Your email address" />

    </div>
    <div class="form-group">
        <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
        <input asp-for="ConfirmEmail" class="form-control" placeholder="Your email address again to confirm" />

    </div>

    <div class="form-group">

        <span asp-validation-for="Message" class="text-danger"></span>
        <textarea asp-for="Message" class="form-control" placeholder="What would you like to ask?">

                            </textarea>


    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Complete <i class="fas fa-cog"></i></button>
    </div>

<div style="font-style:italic"></div>