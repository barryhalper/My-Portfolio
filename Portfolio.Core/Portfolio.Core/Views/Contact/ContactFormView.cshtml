@model Portfolio.Core.Models.ContactViewModel
@inject Microsoft.Extensions.Options.IOptions<AppSettings> appSettings


@{
    ViewBag.Title = "Contact";
}


<div id="contact-me" class="jumbotron">

    <partial name="_backgroundImage" model="(string)ViewBag.Title.ToLower()" />
    <div class="container">
        <section class="page mb-3">

            <h1>Contact Me..</h1>
        </section>
    </div>
</div>

<section>


    <div class="row  mt-3 d-flex justify-content-center">

        <div class="col-md-6">

            <div class="panel">

                <div class="panel-heading">
                    Please get in touch..
                </div>
                <div class="panel-body">
                    <ul class="social-media">
                        <li> <i class="fas fa-envelope fa-lg"></i> <a href="mailto:@appSettings.Value.ContactSettings.Email">@appSettings.Value.ContactSettings.Email</a></li>

                        <li><i class="fab fa-linkedin fa-lg"></i> <a href="@appSettings.Value.ContactSettings.LinkedIn"> @appSettings.Value.ContactSettings.LinkedIn.Replace("https://", "") </a></li>

                        <li>
                            <i class="fab fa-twitter-square fa-lg"></i>
                            <a href="@appSettings.Value.ContactSettings.Twitter">@appSettings.Value.ContactSettings.Twitter.Replace("https://", "")</a>
                        </li>
                        <li> <i class="fab fa-github-square fa-lg"></i> <a href="@appSettings.Value.ContactSettings.Github">@appSettings.Value.ContactSettings.Github.Replace("https://", "")</a> </li>


                    </ul>
                </div>
            </div>


        </div>


        <div class="col-md-5">
            <div class="panel">
                <div class="panel-heading">
                    ..or complete this and I'll get back to you
                </div>
                <div class="panel-body">
                    <form asp-action="Index" asp-antiforgery="true" data-ajax="true" data-ajax-method="post"  >
                        <div asp-validation-summary="ModelOnly" class="text-danger" ></div>

                        <div class="form-group">
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <input asp-for="Name" class="form-control" placeholder="Your name" />

                        </div>

                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Email" class="form-control" placeholder="Your email address" />

                        </div>
                        <div class="form-group">
                            <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                            <input asp-for="ConfirmEmail" class="form-control" placeholder="Your email address again to confirm" />

                        </div>

                        <div class="form-group">

                            <span asp-validation-for="Message" class="text-danger"></span>
                            <textarea asp-for="Message" class="form-control" placeholder="What would you like to ask?">

                            </textarea>


                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Complete </button>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script>
}