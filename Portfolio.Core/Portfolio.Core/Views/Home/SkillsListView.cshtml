@model SkillsViewModel

@{
    ViewBag.Title = "Skills";


}


<div id="skills">

    <div class="jumbotron">

        <partial name="_backgroundImage" model="(string)ViewBag.Title.ToLower()" />

        <div class="container">
            <section class="page mb-3">

                <h1>Skills</h1>
            </section>
        </div>
    </div>

    <section>
        <div class="row  mt-3 d-flex justify-content-center">


            @foreach (var type in Model.Types)
            {
                <div class="col-md-2">

                    <div class="panel">
                        <div class="panel-heading">
                            @type
                        </div>

                        <div class="panel-body">

                            <ul class="">

                                @foreach (var skill in Model.Filter(type))
                                {
                                <li>


                                    <a  class="show-tool-tip" href="#" title="@skill.Name"><img src="~/image/skills/@skill.Image" class="mr-auto ml-auto" style="" alt="@skill.Name" title="@skill.Name" /></a>
                                </li>
                                }

                            </ul>
                        </div>

                    </div>

                </div>
            }


        </div>
    </section>

</div>


